{
  "name": "spacier",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "dev": "pnpm -r dev",
    "dev:all": "pnpm --filter @spacier/backend dev & pnpm --filter @spacier/frontend dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:all": "pnpm -r test",
    "test:be": "pnpm --filter @spacier/backend test",
    "test:fe": "pnpm --filter @spacier/frontend test"
  }
}
